<div class="main users-new text-center">
  <div class="container">
    <div class="form-heading">会員登録</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        <%= form_tag("/users/create") do %>

        <p>Email</p>
        <input type="" name="email" value="<%= @user.email %>">

        <p>Password</p>
        <input type="password" name="password" value="<%= @user.password %>">

        <p>User Name</p>
        <input type="" name="name" value="<%= @user.name %>">

        <input type="submit" value="ユーザー登録">
        <% end %>
      </div>
    </div>
  </div>
</div>
